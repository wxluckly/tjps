body,div,ul,li{margin: 0;padding: 0}
li{list-style: none;}
html{height: 100%;}

@font-face {
  font-family:"STLITI";
  src: url("STLITI.eot");
  src: local("STLITI Regular"), local("STLITI"), url("STLITI.ttf") format("truetype"), url("STLITI.svg#STLITI") format("svg");
}
@font-face {
  font-family:myFirstFont;
  src: url('GSKB00B.ttf');
  font-weight:bold;
}
body{background:url(<%= image_url 'bg7.jpg' %>) repeat-y center bottom;background-size:cover;width: 100%;  background-attachment: fixed;
  filter:progid:DXImageTransform.Microsoft.AlphaImageLoader(sizingMethod='scale');
  -moz-background-size:100% 100%;
  background-size:100% 100%;
  background-repeat: repeat-y ;
}
/*头部定义*/
header{width: 100%;height: 45px;line-height: 45px;background: #121617;position: fixed;top: 0;left: 0;z-index: 999;}
header .back{position: absolute;left: 20px;}
header .title{position: relative;width:100%;text-align: center;color: #cbcbcb;margin:0px;}
header .home{position:absolute;right: 20px;}

.picNav{width: 100%; margin:0px auto; position:fixed; bottom:0px;}
.picNav li{}
.picNav li.on{}
.picNav li a{font-family:STLITI; text-decoration:none;width:23%;  margin-left:2%; line-height: 60px;  text-align: center; float: left;background-size:auto 100%; background:url(<%= image_url 'one_btn2.png' %>) no-repeat center; background-size: contain; color: #fff; font-weight: bolder;}
.picNav li a.on{background: url(<%= image_url 'one_btn1.png' %>) no-repeat center; background-size: contain;}

.container{width: 100%; margin:55px auto 50px auto; position:relative;   }
.container5{width: 100%; margin:55px auto 0 auto; position:relative;}

.container .art1{width: 100%; margin: 0px auto;padding:0 0px;overflow-y:visible; background:url(<%= image_url 'juanzhoubg.png' %>) no-repeat; background-size:100%;}
.container .art1 span{width: 90%; color:#f31b10;}
.container .art1 p{  font-size:16px; padding: 0 0 2%;}
.container .art1 img{width:80%;margin: 9% auto 0;display: block; padding: 10%;}

.container .art2{width: 88%; margin: 0px auto;padding:0 8px;overflow-y:auto; }
.container .art2 span{width: 100%;display:block; color:#430202;font-size:16px; line-height:22px;}
.container .art2 p{ line-height:18px; font-size:16px; line-height:22px;}


.top_right,.top_left,.bottom_left,.bottom_right{position: absolute;width: 42px;height: 42px;}
.top_right{background: url(<%= image_url '2.png' %>) no-repeat center; top: -4px; right: -4px}
.top_left{background: url(<%= image_url '1.png' %>) no-repeat center; top:  -4px; left: -4px}
.bottom_right{background: url(<%= image_url '4.png' %>) no-repeat center; bottom: -4px; right: -4px}
.bottom_left{background: url(<%= image_url '3.png' %>) no-repeat center; bottom:  -4px; left: -4px}
.container p{width: 100%;color:#ab8821;line-height: 26px;font-family: 1.5em;}
.container span{width: 100%;color:#ab8821;line-height: 26px;font-family: 1.5em;}
.container p img{width:80%;margin: 5px auto;display: block;}



.container .art1 p{ position:relative;}
.left, .right{ background:rgba(0,0,0,0.8); position:absolute; z-index:1; left:6%; border-radius:999px; width:30px; height:30px; text-align:center; display:block; top:44%;}
.right{ left:auto; right:6%;}
.container .art1 .left img, .container .art1  .right img{ width:50%;  display:inline; margin:0; padding:0; margin:6px 0 0 0;}
.art3{ height:209px; margin: 0 0 0 1%;}
.art3 .mingzi { float:left; width:14%;margin-left:6%; text-align:center; height:198px;}
.art3 .mingzi.liazi{ padding:35px 0 0 0;}
.art3 .mingzi.sanzi{ padding:25px 0 0 0;}
.art3 .mingzi.sizi{ padding:0px 0 0 0;}
.art3 .mingzi span{ background:#ab8822; color:#fff; border-radius:999px; display:block; width:56px; height:56px; line-height:60px; font-weight:bolder; text-align:center; font-family:myFirstFont; font-size:25px; margin: 0 auto -10px; }
.art3 p{font-size:18px; width:77%; letter-spacing:1px; font-weight:bolder; padding:0; float:left;margin: 0 0 0 3%;-webkit-text-orientation: upright;}
.art3 p span{color:#430202;  width:1em; float:left; line-height:1.1em; margin: 0 0 0 10px;word-break: break-word;}

